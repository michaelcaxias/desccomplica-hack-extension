{
    "manifest_version": 3,
    "name": "Descomplica Response Interceptor",
    "version": "1.0",
    "description": "Intercepts request responses and logs decoded assertions.",
    "permissions": [],
    "host_permissions": [
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}